                                        <path id="Icon_awesome-clock" data-name="Icon awesome-clock"
                                              d="M13.781.563A13.219,13.219,0,1,0,27,13.781,13.216,13.216,0,0,0,13.781.563Zm3.044,18.661-4.7-3.417a.644.644,0,0,1-.261-.517V6.319a.641.641,0,0,1,.64-.64H15.06a.641.641,0,0,1,.64.64v7.34l3.385,2.463a.639.639,0,0,1,.139.9l-1.5,2.068A.644.644,0,0,1,16.825,19.223Z"
                                              transform="translate(-0.563 -0.563)" fill="#fff"/>
                                    </svg>

                                    <span>ساعت های کاری</span>
                                </a>
                                <a class="board__inner__body__main__content__settings__item">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="27.563" height="27.563"
                                         viewBox="0 0 27.563 27.563">
                                        <path id="Icon_awesome-phone-alt" data-name="Icon awesome-phone-alt"
                                              d="M26.777,19.477l-6.029-2.584a1.292,1.292,0,0,0-1.507.371l-2.67,3.262a19.954,19.954,0,0,1-9.539-9.539l3.262-2.67a1.289,1.289,0,0,0,.371-1.507L8.081.781A1.3,1.3,0,0,0,6.6.033L1,1.325A1.292,1.292,0,0,0,0,2.584,24.976,24.976,0,0,0,24.979,27.563a1.292,1.292,0,0,0,1.26-1l1.292-5.6A1.308,1.308,0,0,0,26.777,19.477Z"
                                              transform="translate(0 0)" fill="#fff"/>
                                    </svg>


                                    <span>اطلاعات تماس</span>
                                </a>
                            </div>
                            <div>
                                <select name="active_doctor" id="active_doctor" class="select-css mt-4">
                                    {% for d in assistantDoctors %}
                                        <option value="{{ d.id }}">{{ d.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>


                        </div>
                        <div class="board__inner__body__main__content__clock pt-2">
                            {% for time in times %}
                                <div class="board__inner__body__main__content__clock__item d-flex">
                                    <div class="col-2 --start">
                                <span>
                                    {% if time.day == 1 %}
                                        شنبه
                                    {% elseif time.day == 2 %}
                                        یکشنبه
                                    {% elseif time.day == 3 %}
                                        دوشنبه
                                    {% elseif time.day == 4 %}
                                        سه‌شنبه
                                    {% elseif time.day == 5 %}
                                        چهارشنبه
                                    {% elseif time.day == 6 %}
                                        پنجشنبه
                                    {% else %}
                                        جمعه
                                    {% endif %}
                                </span>
                                    </div>
                                    <div class="col-5 --middle">
                                        <input type="text" placeholder="از ساعت"
                                               name="day[{{ time.id }}][from_time]"
                                               value="{{ time.from_time }}">
                                    </div>
                                    <div class="col-5 --end">
                                        <input type="text" placeholder="از ساعت"
                                               name="day[{{ time.id }}][to_time]"
                                               value="{{ time.to_time }}">
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <button type="submit" class="board__inner__body__main__content__clock__submit">ثبت نهایی
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

